CSRC += ${PICOLIBSDK_DEVICES_DIR}/pico/pico_init.c
CSRC += ${PICOLIBSDK_DEVICES_DIR}/pico/pico_bat.c

DEFINE += -D USE_PICO=1

ifeq (${DEVICE},pico)
MCU=RP2040
FLASHSIZE=0x200000
endif

ifeq (${DEVICE},pico2)
DEFINE += -D USE_PICO2=1
MCU=RP2350A
FLASHSIZE=0x400000
endif

ifeq (${DEVICE},pico2riscv)
DEFINE += -D USE_PICO2=1
MCU=RP2350ARISCV
FLASHSIZE=0x400000
endif
